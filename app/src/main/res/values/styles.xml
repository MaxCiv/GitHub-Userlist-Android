<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Widget.GitHubUserList.RoundButton" parent="">
        <item name="android:minHeight">50dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.GitHubUserList.RoundButton.Text" parent="">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.GitHubUserList.Clickable" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.GitHubUserList.Clickable.Borderless" parent="Widget.GitHubUserList.Clickable">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
